<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <managed-bean>
        <managed-bean-name>usuarioFaces</managed-bean-name>
        <managed-bean-class>Controller.UsuarioFaces</managed-bean-class>    
        <managed-bean-scope>session</managed-bean-scope></managed-bean>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>Cadastrar</from-outcome>
            <to-view-id>/cadastrar.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>Logar</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>AcessarConta</from-outcome>
            <to-view-id>/conta.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>LerLivro</from-outcome>
            <to-view-id>/livro.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>Sair</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/cadastrar.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>VoltarPrincipal</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>sistemaLogin</managed-bean-name>
        <managed-bean-class>SistemaLogin</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>VoltarPrincipal</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>AcessarConta</from-outcome>
            <to-view-id>/conta.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/conta.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>VoltarPrincipal</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>sistemaFaces</managed-bean-name>
        <managed-bean-class>Controller.SistemaFaces</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
</faces-config>
